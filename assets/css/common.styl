@import './variable.styl'

ul
    padding 0
    margin 0


// 头像  begin
portrait(porSize = 180px)
    width porSize
    height porSize
    border-radius 50%
    border 1px solid rgba(118, 185, 255,0.5)
    box-shadow 0px 0px 8px rgba(118, 185, 255,0.5)
    overflow hidden
// 头像  end

// 蒙层 begin
mask()
    width 100%
    height 100%
    position fixed
    left 50%
    top 50%
    background-color rgba(51, 51, 51, 0.5)
    z-index 9999
    transform translateX(-50%) translateY(-50%)
// 蒙层 end

// radio重置 begin
radio()
